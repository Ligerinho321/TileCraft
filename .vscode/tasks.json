{
    "tasks": [
        {
            "label": "release",
            "command": "gcc",
            "args": [
                "-fdiagnostics-color=always",
                "main.c",
                "-o",
                "TileCraft.exe",
                "${workspaceFolder}\\sources\\utils.c",
                "${workspaceFolder}\\sources\\window_file.c",
                "${workspaceFolder}\\sources\\window_create_map.c",
                "${workspaceFolder}\\sources\\window_menu.c",
                "${workspaceFolder}\\sources\\window_project\\window_project_utils.c",
                "${workspaceFolder}\\sources\\window_project\\window_project.c",
                "${workspaceFolder}\\sources\\window_map\\window_map_utils.c",
                "${workspaceFolder}\\sources\\window_map\\window_map.c",
                "${workspaceFolder}\\sources\\window_tiles.c",
                "${workspaceFolder}\\sources\\window_layers.c",
                "${workspaceFolder}\\sources\\window_map_informations.c",
                "${workspaceFolder}\\sources\\window_edit.c",
                "${workspaceFolder}\\sources\\window_edit_informations.c",
                "${workspaceFolder}\\sources\\surface_utils.c",
                "${workspaceFolder}\\sources\\switch_color_utils.c",
                "${workspaceFolder}\\sources\\window_settings.c",
                "${workspaceFolder}\\sources\\string_utils.c",
                "${workspaceFolder}\\sources\\file_utils.c",
                "${workspaceFolder}\\sources\\window_new_tile_set.c",
                "-I${workspaceFolder}\\include\\window_project",
                "-I${workspaceFolder}\\include\\window_map",
                "-I${workspaceFolder}\\include",
                "-I${workspaceFolder}\\include\\dirent",
                "-I${workspaceFolder}\\include\\SDL2",
                "-L${workspaceFolder}\\lib",
                "-lmingw32",
                "-lSDL2main",
                "-lSDL2",
                "-lSDL2_image",
                "-lSDL2_ttf",
                "icone.res",
                "-mwindows"
            ],
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "SDL2",
            "command": "gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "main.c",
                "-o",
                "TileCraft.exe",
                "${workspaceFolder}\\sources\\utils.c",
                "${workspaceFolder}\\sources\\window_file.c",
                "${workspaceFolder}\\sources\\window_create_map.c",
                "${workspaceFolder}\\sources\\window_menu.c",
                "${workspaceFolder}\\sources\\window_project\\window_project_utils.c",
                "${workspaceFolder}\\sources\\window_project\\window_project.c",
                "${workspaceFolder}\\sources\\window_map\\window_map_utils.c",
                "${workspaceFolder}\\sources\\window_map\\window_map.c",
                "${workspaceFolder}\\sources\\window_tiles.c",
                "${workspaceFolder}\\sources\\window_layers.c",
                "${workspaceFolder}\\sources\\window_map_informations.c",
                "${workspaceFolder}\\sources\\window_edit.c",
                "${workspaceFolder}\\sources\\window_edit_informations.c",
                "${workspaceFolder}\\sources\\surface_utils.c",
                "${workspaceFolder}\\sources\\switch_color_utils.c",
                "${workspaceFolder}\\sources\\window_settings.c",
                "${workspaceFolder}\\sources\\string_utils.c",
                "${workspaceFolder}\\sources\\file_utils.c",
                "${workspaceFolder}\\sources\\window_new_tile_set.c",
                "-I${workspaceFolder}\\include",
                "-I${workspaceFolder}\\include\\window_project",
                "-I${workspaceFolder}\\include\\window_map",
                "-I${workspaceFolder}\\include\\dirent",
                "-I${workspaceFolder}\\include\\SDL2",
                "-L${workspaceFolder}\\lib",
                "-lmingw32",
                "-lSDL2main",
                "-lSDL2",
                "-lSDL2_image",
                "-lSDL2_ttf",
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        }
    ],
    "version": "2.0.0"
}